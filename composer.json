{
    "name": "specialtactics/laravel-api-boilerplate",
    "description": "An API boilerplate for Laravel",
    "keywords": ["laravel", "boilerplate", "api", "api boilerplate", "laravel api"],
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Max Snow",
            "email": "contact@maxsnow.me"
        }
    ],
    "require": {
        "php": "^7.2",
        "fideloper/proxy": "^4.0",
        "laravel/framework": "^6",
        "laravel/tinker": "^1.0",
        "specialtactics/l5-api": "^1.1"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.4",
        "beyondcode/laravel-dump-server": "^1.0",
        "facade/ignition": "^1.4",
        "fzaninotto/faker": "^1.4",
        "laravel/telescope": "^2",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^3.0",
        "phpunit/phpunit": "^8.3"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "laravel/telescope"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php artisan jwt:secret"
        ],
        "test": "./vendor/bin/phpunit --colors=always -v --testdox",
        "lint": "./vendor/bin/phpcs",
        "docs": [
            "@php artisan ide-helper:generate --no-interaction"
        ],
        "build": "./env/build.sh"
    }
}
